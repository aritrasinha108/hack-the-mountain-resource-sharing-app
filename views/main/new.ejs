<h1 class="card-title text-center font-weight-bold">
    NEW POST
</h1>
<%- include("_messages") %>
<form  class ="container"style="box-shadow:10px 10px 5px black;" action="/main/new" method="post" enctype="multipart/form-data">
<div class="form-group mb-2">
    <label for="post-title" class="font-weight-bold">Title</label>
    <input class="form-control" id="post-title" required type="text" placeholder="Enter the title of the post" name="title">
</div>
<div class="form-group mb-2">
    <label for="summary" class="font-weight-bold" >Summary</label>
    <textarea class="form-control" name="sum" id="summary" required rows="5"></textarea>
    </div>
<div class="form-group">
    <label for=tags">Enter Tags</label>
    <input type="text" class="form-control" id="tags" aria-describedby="emailHelp" placeholder="Enter the Tags Here..."
        name="tags">
    <small id="tagAlert" class="form-text text-muted text-danger">
        <p class="text-danger">Seperate more than one tags with Space!!</p>
    </small>
</div>
<div class="form-group mb-2 d-flex flex-row justify-content-center">    
    <label for="res-doc" class="font-weight-bold">Attach the resoure doc</label>
    <input required name="file" type="file" class="form-control-file" id="res-doc">
</div>
<div class="d-flex flex-row justify-content-center">

    <button type="submit" class="btn btn-primary mx-3 my-3">Submit</button>
    <a  href="/main/" class="btn btn-danger mx-3 my-3">Cancel</a>
</div>

</form>
